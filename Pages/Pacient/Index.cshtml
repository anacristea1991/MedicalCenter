@page
@model MedicalCenter.Pages.Pacient.IndexModel
@inject CommonLocalizationService localizer
@{
    ViewData["Title"] = localizer.Get("Index") + localizer.Get("Pacient");
}

<h1>@localizer.Get("Index")</h1>

<p>
    <a asp-page="Create">@localizer.Get("CreateNew")</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].CNP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].StreetNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Patient)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CNP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetNumber)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">@localizer.Get("Edit")</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">@localizer.Get("Details")</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">@localizer.Get("Delete")</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@page
@model MedicalCenter.Pages.Room.EditModel
@inject CommonLocalizationService localizer
@{
    ViewData["Title"] = localizer.Get("Room") + localizer.Get("Edit");
}

<h1>@localizer.Get("Edit")</h1>

<h4>@localizer.Get("Room")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Room.Id" />
            <div class="form-group">
                <label asp-for="Room.Floor" class="control-label"></label>
                <input asp-for="Room.Floor" class="form-control" />
                <span asp-validation-for="Room.Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomNumber" class="control-label"></label>
                <input asp-for="Room.RoomNumber" class="form-control" />
                <span asp-validation-for="Room.RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.Description" class="control-label"></label>
                <input asp-for="Room.Description" class="form-control" />
                <span asp-validation-for="Room.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Room.IsAvailable" /> @Html.DisplayNameFor(model => model.Room.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="@localizer.Get("Save")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">@localizer.Get("BackToList")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

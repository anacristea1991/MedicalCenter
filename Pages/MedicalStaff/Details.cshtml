@page
@model MedicalCenter.Pages.MedicalStaff.DetailsModel
@inject CommonLocalizationService localizer
@{
    ViewData["Title"] = localizer.Get("MedicalStaff") + localizer.Get("Details");
    var consultationRoom = Model.MedicalStaff.ConsultationRoom;
}

<h1>@localizer.Get("Details")</h1>

<div>
    <h4>@localizer.Get("MedicalStaff")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicalStaff.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicalStaff.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicalStaff.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicalStaff.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicalStaff.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicalStaff.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicalStaff.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicalStaff.EndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicalStaff.Specialisation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicalStaff.Specialisation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicalStaff.ConsultationRoom)
        </dt>
        <dd class="col-sm-10">
            @string.Format("{0}.{1}", consultationRoom.Floor, consultationRoom.RoomNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.MedicalStaff.Id">@localizer.Get("Edit")</a> |
    <a asp-page="./Index">@localizer.Get("BackToList")</a>
</div>

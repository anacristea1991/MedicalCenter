@page
@model MedicalCenter.Pages.MedicalStaff.IndexModel
@inject CommonLocalizationService localizer
@{
    ViewData["Title"] = localizer.Get("MedicalStaff") + localizer.Get("Index");
}

<h1>@localizer.Get("Index")</h1>

<p>
    <a asp-page="Create">@localizer.Get("CreateNew")</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicalStaff[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalStaff[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalStaff[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalStaff[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalStaff[0].Specialisation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalStaff[0].ConsultationRoom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MedicalStaff)
        {
            var consultationRoom = item.ConsultationRoom;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialisation)
                </td>
                <td>
                    @string.Format("{0}.{1}", consultationRoom.Floor, consultationRoom.RoomNumber)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id"> @localizer.Get("Edit")</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">@localizer.Get("Details")</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">@localizer.Get("Delete")</a>
                </td>
            </tr>
        }
    </tbody>
</table>
